<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/turtles" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Name
    <input type="text" name="turtle[name]" value="<%= @turtle.name %>">
  </label>

  <label>Teacher Name
    <input type="text" name="turtle[teacher_name]" value="<%= @turtle.teacher_name %>">
  </label>

  <input type="submit">
</form>
